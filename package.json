{
  "name": "cloud-native-ecommerce-frontend",
  "version": "1.0.0",
  "description": "Frontend proxy server for Cloud-Native E-Commerce microservices",
  "main": "proxy-server.js",
  "scripts": {
    "start": "node proxy-server.js",
    "dev": "nodemon proxy-server.js",
    "test": "jest",
    "build": "echo 'No build step needed for static frontend'",
    "lint": "eslint *.js",
    "format": "prettier --write *.js *.html *.css",
    "docker:build": "docker build -t cloud-native-frontend .",
    "docker:run": "docker run -p 3001:3001 cloud-native-frontend",
    "services:start": "docker-compose up -d",
    "services:stop": "docker-compose down",
    "services:logs": "docker-compose logs -f",
    "full:start": "npm run services:start && npm run dev"
  },
  "keywords": [
    "microservices",
    "proxy",
    "ecommerce",
    "cloud-native",
    "go",
    "mongodb",
    "kafka"
  ],
  "author": "Cloud-Native Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.21.2",
    "http-proxy-middleware": "^2.0.9",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "helmet": "^7.0.0",
    "winston": "^3.10.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "jest": "^29.6.0",
    "supertest": "^6.3.0",
    "eslint": "^8.44.0",
    "prettier": "^3.0.0",
    "@types/jest": "^29.5.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
